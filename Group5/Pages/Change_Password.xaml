<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Group5.ChangePassword"
             BackgroundColor="White">

    <StackLayout Padding="20" Spacing="20">
        <!-- Employee ID Input -->
        <Entry x:Name="EmployeeIDEntry" Placeholder="Employee ID" Keyboard="Numeric" />

        <!-- New Password Input -->
        <Entry x:Name="NewPasswordEntry" Placeholder="New Password" IsPassword="True" />

        <!-- Confirm Password Input -->
        <Entry x:Name="ConfirmPasswordEntry" Placeholder="Confirm Password" IsPassword="True" />

        <!-- Change Password Button -->
        <Button Text="Change Password" Clicked="OnChangePasswordButtonClicked" />
    </StackLayout>
</ContentPage>
